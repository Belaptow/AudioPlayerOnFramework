<Window x:Class="AudioPlayer.SearchAudio"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AudioPlayer"
        mc:Ignorable="d"
        Title="SearchAudio" Height="200" Width="300"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="DarkGray"
        ShowInTaskbar="False">
    <Grid>
        <Grid Name="searchControls"
              VerticalAlignment="Top"
              Margin="5, 5, 5, 5">
            
            <TextBox Name="searchInput" 
                     Height="20"
                     Margin="0, 0, 25, 0"
                     HorizontalAlignment="Stretch"
                     KeyDown="searchInput_KeyDown"/>
            
            <Image Name="searchCommence"
                   Source="../Icons/research.png" 
                   Width="20"
                   Height="20"
                   Margin="0, 0, 0, 0"
                   HorizontalAlignment="Right"
                   MouseEnter="ImageButton_MouseEnter" 
                   MouseLeave="ImageButton_MouseLeave"
                   MouseUp="searchCommence_MouseUp"/>

        </Grid>
        
        <Button Name="testButton" 
                Height="30"
                Width="30"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Panel.ZIndex="10"
                Click="testButton_Click"/>

        <ProgressBar Name="searchProgress"
                     Width="200"
                     Height="20"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Top"
                     Panel.ZIndex="10"
                     Margin="5, 30, 0, 0"
                     Visibility="Hidden"
                     Maximum="100"/>

        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      Margin="5, 30, 5, 5">

            <ItemsControl Name="searchResults"
                      Background="DarkGray">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <TextBlock Text="{Binding Path=name}"
                                   Height="20"
                                   Margin="2, 3, 69, 0"
                                   HorizontalAlignment="Stretch"/>

                            <Border Width="1"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Stretch"
                                    Background="LightGray"
                                    Margin="0, 2, 66, 2"/>

                            <TextBlock Text="{Binding Path=duration}" 
                                   Height="20"
                                   HorizontalAlignment="Right"
                                   Margin="0, 3, 36, 0"/>

                            <Border Width="1"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Stretch"
                                    Background="LightGray"
                                    Margin="0, 2, 34, 2"/>

                            <Image Source="../Icons/play.png" 
                               Width="15"
                               Height="15"
                               Margin="0, 5, 19, 5"
                               MouseEnter="ImageButton_MouseEnter" 
                               MouseLeave="ImageButton_MouseLeave"
                               HorizontalAlignment="Right"
                               MouseUp="PlayButton_MouseUp"/>

                            <Image Source="../Icons/stop.png" 
                               Width="15"
                               Height="15"
                               Margin="0, 5, 2, 5"
                               MouseEnter="ImageButton_MouseEnter" 
                               MouseLeave="ImageButton_MouseLeave"
                               HorizontalAlignment="Right"
                               MouseUp="StopButton_MouseUp"/>

                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            
        </ScrollViewer>

        <TextBlock Name="noResults"
                   Text="По запросу"
                   Visibility="Hidden"
                   Margin="5, 30, 5, 0"
                   TextWrapping="Wrap"/>

    </Grid>
</Window>
